extends ../layout

block content
  if err
    p.alert.alert-danger #{err}
  if info
    p.alert.alert-success #{info}
  form.vertical-form(method="post", action='/admin/user/password')
    .form-group
      label(for="oldpassword") 原密码
      input.form-control.input-lg(name="oldpassword", required='true',placeholder="请输入原密码")
    .form-group
      label(for="newpassword") 新密码
      input.form-control.input-lg(name="newpassword", required='true',placeholder="请输入新密码")
    .form-group
      label(for="fixpassword") 确认新密码
      input.form-control.input-lg(name="fixpassword", required='true',placeholder="请再次输入")

    button.btn.btn-lg.btn-info(type="submit") 确定修改