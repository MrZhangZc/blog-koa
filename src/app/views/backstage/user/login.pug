extends ../layout_user

block content

  form.form-signin(method="post", action="/admin/users/login")
    h2.form-signin-heading 张智超登录
      //- small.pull-right
      //-   a(href="/admin/users/register") 注册
    != messages()

    label.sr-only(for="myname") 用户名
    input.myname.form-control(name="myname",type="text", placeholder="请输入用户名...", required="", autofocus="")

    label.sr-only(for="password") 密码
    input.password.form-control(name="password",type="password", placeholder="请输入密码...", required="", autofocus="")

    button.btn.btn-lg.btn-primary.btn-block(type="submit") 登录
