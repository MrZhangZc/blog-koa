extends ../layout

block content
  h2.page.header 添加分类

  if errors && errors.length
    .errors
      each error in errors
        p.alert.alert-danger #{error.msg}

  form.vertical-form(method="post", action=action)
    .form-goorp
      label(for="title") 标题
      input.form-control.input-lg(name="title", required='true',placeholder="请输入名字。。。", value=category.title)

    button.btn.btn-lg.btn-info(type="submit") 确认添加


