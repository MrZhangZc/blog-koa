extends ../layout

append css
  link(rel="stylesheet", href="/css/login.css")
block main
  form.form-signin(method="post", action="/login")
    h2.form-signin-heading 登录

    if err
      p.alert.alert-danger #{err}
      
    label.sr-only(for="myname") 用户名
    input.myname.form-control(name="user[nickname]",type="text", placeholder="请输入用户名...", required="", autofocus="")

    label.sr-only(for="password") 密码
    input.password.form-control(name="user[password]",type="password", placeholder="请输入密码...", required="", autofocus="")

    button.btn.btn-lg.btn-primary.btn-block(type="submit") 登录
